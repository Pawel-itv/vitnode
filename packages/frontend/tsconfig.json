{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "eslint-config-vitnode/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*", "global.d.ts"],
  "exclude": ["codegen.ts", "scripts/**/*"]
}
